<h1>Albums page: </h1>
<div class="container">
  {{#each items}}
    <div class="summary">
      <div class="img-container">
{{#if this.images.0.url}}
        <img src="{{this.images.0.url}}" alt="image for track" />
         {{else}}
                <h3>no image</h3>
                {{/if}}
      </div>
      <div class="artist-container">
        <h4>{{this.name}}</h4>
        <button id="view-albums" type="submit">
          <a href="/tracks/{{this.id}}"> View Tracks</a>
        </button>
      </div>
    </div>
  {{/each}}
</div>